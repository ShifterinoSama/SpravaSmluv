@model SpravaSmluv.Models.Contract

@{
    ViewData["Title"] = "Detaily smlouvy";
}

<h1>Detaily smlouvy</h1>

<div>
    <h4>Smlouva</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EvidenceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvidenceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Institution)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Institution)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContractManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractManager.FullName)
        </dd>
        @foreach (var item in Model.Advisors)
        {
            if (!(item.Id == Model.ContractManagerId)){
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.FullName)
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosureDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TerminationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TerminationDate)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model.Id">Upravit</a> |
        <a asp-action="Index">Zpátky na výpis</a>
</div>
