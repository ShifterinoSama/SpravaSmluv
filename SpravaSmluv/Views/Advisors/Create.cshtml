@model SpravaSmluv.Models.Advisor

@{
    ViewData["Title"] = "Vytvořit profil poradce";
}

<h1>Vytvořit profil poradce</h1>

<h4>Poradce</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(a => a.FirstName)
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                @*<label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />*@
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.LastName)
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                @*<label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />*@
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Email)
                @Html.TextBoxFor(a => a.Email, new { @type = "email", @class = "form-control", title = "Zadejte email v platném formátu!" })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.PhoneNumber)
                @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
                @*<label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />*@
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.PersonalIdentificationNumber)
                @Html.TextBoxFor(a => a.PersonalIdentificationNumber, new { @class = "form-control" })
                @*<label asp-for="PersonalIdentificationNumber" class="control-label"></label>
            <input asp-for="PersonalIdentificationNumber" class="form-control" />*@
                <span asp-validation-for="PersonalIdentificationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Age)
                @Html.EditorFor(a => a.Age, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @*<label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />*@
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpátky na výpis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
